{
    "name": "axstrad/common",
    "description": "Common classes used throughout Axstrad projects",
    "type": "library",
    "keywords": [],
    "license": "MIT",
    "authors": [
        {
            "name": "Dan Kempster",
            "email": "dev@dankempster.co.uk",
            "role": "Developer"
        }
    ],

    "require": {
        "php": ">=5.4",
        "doctrine/common": "~2.4",
        "phpoption/phpoption": "~1.3"
    },

    "require-dev": {
        "axstrad/test": "~0.1.0",
        "phpunit/phpunit": "~4.1",
        "satooshi/php-coveralls": "dev-master"
    },

    "autoload": {
        "psr-4": {
            "Axstrad\\Common\\Tests\\": "tests/",
            "Axstrad\\Common\\": "src/"
        }
    },

    "minimum-stability": "dev",

    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev",
            "dev-develop": "0.2.x-dev"
        }
    },

    "archive": {
        "exclude": ["!vendor", "Tests", "phpunit.xml*", ".gitignore", ".travis.yml"]
    }
}
